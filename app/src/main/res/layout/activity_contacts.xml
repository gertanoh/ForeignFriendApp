<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="0dp"
    android:paddingRight="0dp"
    android:layout_alignParentRight="false"
    android:layout_alignParentTop="false"
    android:layout_alignParentEnd="false"
    android:layout_alignParentLeft="false">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.group11.kth.foreignfriend.ContactsActivity">

        <ImageView
            android:id="@+id/user_profile_picture"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_barack" />
        <!--android:background="@drawable/profile_circular_border_image" -->

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#928aff"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/user_profile_picture"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_name"
            android:layout_toRightOf="@+id/user_profile_picture"
            android:hint="I would like to be contacted by Facebook/Whatsapp"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp" />

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/line_id"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/email" />
            <!--android:background="@drawable/profile_circular_border_image" -->

        <TextView
            android:id="@+id/email_contact_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_id"
            android:layout_toRightOf="@+id/email_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Email"
            android:textSize="20dp"
            android:lines="2"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/whatsapp_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/line_id_first"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/whatsapp" />
        <!--android:background="@drawable/profile_circular_border_image" -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_id_first"
            android:layout_toRightOf="@+id/whatsapp_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:hint="Whatsapp number"
            android:textSize="20dp"
            android:id="@+id/whatsapp"
            android:textStyle="italic"/>


        <ImageView
            android:id="@+id/sms_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/line_id_second"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_comment_black_24dp" />
        <!--android:background="@drawable/profile_circular_border_image" -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_id_second"
            android:layout_toRightOf="@+id/sms_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Phone Number"
            android:textSize="24dp"
            android:id="@+id/phoneNumber"
            android:textStyle="italic"/>

        <Button
            android:background="#9e7c4646"
            android:elevation="5dp"
            android:text="EDIT"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/edit_btn"
            android:layout_below="@+id/sms_icon"
            android:layout_marginLeft="50dp"
            />
        <Button
            android:background="#9e7c4646"
            android:elevation="5dp"
            android:text="DONE"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/donebtn"
            android:layout_below="@+id/sms_icon"
            android:layout_toRightOf="@+id/edit_btn"
            android:layout_marginLeft="70dp"
            />




        <View
            android:id="@+id/line_id_second"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="32dp"
            android:background="#c6c6c6"
            android:layout_below="@+id/whatsapp_icon"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/line_id_first"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="24dp"
            android:background="#c6c6c6"
            android:layout_below="@+id/email_icon"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/line_id"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c6c6c6"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/user_profile_picture"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</ScrollView>